{
    "name": "xtreamwayz/expressive-console",
    "description": "Symfony Console for Zend Expressive",
    "keywords": [
        "console",
        "expressive",
        "zend-expressive",
        "zendframework"
    ],
    "license": "MIT",
    "require": {
        "php": "^7.1",
        "ocramius/package-versions": "^1.3",
        "psr/container": "^1.0",
        "symfony/console": "^4.0"
    },
    "require-dev": {
        "doctrine/coding-standard": "^4.0",
        "ocramius/proxy-manager": "^2.1",
        "phpstan/phpstan": "^0.9.2",
        "phpunit/phpunit": "^7.0",
        "zendframework/zend-servicemanager": "^3.3"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        },
        "zf": {
            "config-provider": "Xtreamwayz\\Expressive\\Console\\ConfigProvider"
        }
    },
    "autoload": {
        "psr-4": {
            "Xtreamwayz\\Expressive\\Console\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "XtreamwayzTest\\Expressive\\Console\\": "test/"
        }
    },
    "bin": [
        "bin/expressive-console"
    ],
    "scripts": {
        "analyse": "phpstan analyse --level=0 src",
        "analyse-strict": "phpstan analyse -l 7 src",
        "check": [
            "@cs-check",
            "@test",
            "@analyse"
        ],
        "cs-check": "phpcs --colors",
        "cs-fix": "phpcbf --colors",
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-clover clover.xml"
    },
    "support": {
        "issues": "https://github.com/xtreamwayz/expressive-console/issues",
        "source": "https://github.com/xtreamwayz/expressive-console",
        "rss": "https://github.com/xtreamwayz/expressive-console/releases.atom"
    }
}
