#!/usr/bin/env php
<?php

declare(strict_types=1);

// Setup and verify autoloading
if (file_exists($a = __DIR__ . '/../../../autoload.php')) {
    require $a;
} elseif (file_exists($a = __DIR__ . '/../vendor/autoload.php')) {
    require $a;
} elseif (file_exists($a = __DIR__ . '/../autoload.php')) {
    require $a;
} else {
    fwrite(STDERR, 'Cannot locate autoloader; please run "composer install"' . PHP_EOL);
    exit(1);
}

// Verify container
$a = dirname(realpath($a));
$containerFile = realpath($a . '/../config/container.php');
if (! file_exists($containerFile)) {
    fwrite(STDERR, 'Cannot locate container; make sure the "config/container.php" exists' . PHP_EOL);
    exit(1);
}

use Psr\Container\ContainerInterface;
use Xtreamwayz\Expressive\Console\Console;

/** @var ContainerInterface $container */
$container = require $containerFile;

// Setup console
$console = Console::createFromContainer($container);
$console->run();
